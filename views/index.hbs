  <body onresize="changeDisplay()">
    <div class="daily" onclick="event.stopPropagation();">
      <span class="close daily" onclick="closeDaily()">&times;</span>
      <a href='#'><span class="glyphicon glyphicon-refresh" onclick="loadDailyReminder()"></span></a>
      <p class="bound"></p>
      <ul class="todolist daily">
      </ul>
    </div>
