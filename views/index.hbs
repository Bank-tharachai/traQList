      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <a href="#" onclick="addFolder()">
                New Folder
            </a>
          </li>
          <div class="folder-lists">
          </div>
        </ul>
      </div>
    <div id="page-content-wrapper" ondragenter="event.preventDefault()">
    </div>

    <div class="sort-wrapper">
      <div class="sort" num="1" onclick="sortTask(1)">
        <i class="fa fa-clock-o" aria-hidden="true"></i>
      </div>
      <div class="sort" num="2" onclick="sortTask(2)">
        !
      </div>
      <div class="sort" num="3" onclick="sortTask(3)">
        A
      </div>
      <div class="sort" num="4" onclick="sortTask(4)">
        ?
      </div>
    </div>

      <div id="myModal" class="modal">
        <div class="modal-content">
          <div class="urgency-wrapper">
            <div class="urgency" num="0" onclick="changeUrgency(this,event)">
              -
            </div>
            <div class="urgency" num="1" onclick="changeUrgency(this,event)">
              !
            </div>
            <div class="urgency" num="2" onclick="changeUrgency(this,event)">
              !!
            </div>
            <div class="urgency" num="3" onclick="changeUrgency(this,event)">
              !!!
            </div>
          </div>
          <form role="form" action="/edit" method="post" id="changedetail">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="new-taskname"
              placeholder="Enter name">
            </div>
            <div class="form-group">
              <label for="date">Date</label>
              <input type="date" class="form-control"
              id="new-date" placeholder="date">
            </div>
            <div class="form-group" id="Alarm">
              <label for="alarm">Alarm</label>
              <input type="datetime-local" class="form-control"
              id="new-alarm" placeholder="date">
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control" id="description"
              placeholder="Enter Description" rows="7" style="height:200px;"></textarea>
            </div>
            <button type="button" class="addAlarmButton" onclick="addMultiAlarm()">
              Add Alarm
            </button>

            <button type="submit" class="btn btn-default"> Save </button>
          </form>
        </div>
      </div>
